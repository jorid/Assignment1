<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:gravity="center"
    tools:context="nl.banaanmetsnor.jori.assignment1.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/phoneNumberView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:width="300dp"
        android:textAlignment="center"
        android:text=""
        android:background="#ececec" />


    <GridLayout android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:id="@+id/gridLayout"
        android:layout_marginTop="22dp"
        android:layout_below="@+id/phoneNumberView"
        android:columnCount="3"
        android:rowCount="4"
        android:layout_centerHorizontal="true">



        <Button
            style="?android:attr/buttonStyleSmall"
            android:onClick="onNumberButtonClick"
            android:layout_width="@dimen/box_size"
            android:layout_height="@dimen/box_size"
            android:text="7"
            android:id="@+id/seven_button"
            android:layout_column="0"
            android:layout_row="0"/>


        <Button
            style="?android:attr/buttonStyleSmall"
            android:onClick="onNumberButtonClick"
            android:layout_width="@dimen/box_size"
            android:layout_height="@dimen/box_size"
            android:text="8"
            android:id="@+id/eight_button"
            android:layout_column="1"
            android:layout_row="0" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:onClick="onNumberButtonClick"
            android:layout_width="@dimen/box_size"
            android:layout_height="@dimen/box_size"
            android:text="9"
            android:id="@+id/nine_button"
            android:layout_row="0"
            android:layout_column="2"/>

        <Button
            style="?android:attr/buttonStyleSmall"
            android:onClick="onNumberButtonClick"
            android:layout_width="@dimen/box_size"
            android:layout_height="@dimen/box_size"
            android:text="0"
            android:id="@+id/zero_button"
            android:layout_row="3"
            android:layout_column="1"/>

        <Button
            style="?android:attr/buttonStyleSmall"
            android:onClick="onNumberButtonClick"
            android:layout_width="@dimen/box_size"
            android:layout_height="@dimen/box_size"
            android:text="1"
            android:id="@+id/one_button"
            android:layout_column="0"
            android:layout_row="2"/>

        <Button
            style="?android:attr/buttonStyleSmall"
            android:onClick="onNumberButtonClick"
            android:layout_width="@dimen/box_size"
            android:layout_height="@dimen/box_size"
            android:text="2"
            android:id="@+id/two_button"
            android:layout_row="2"
            android:layout_column="1"/>

        <Button
            style="?android:attr/buttonStyleSmall"
            android:onClick="onNumberButtonClick"
            android:layout_width="@dimen/box_size"
            android:layout_height="@dimen/box_size"
            android:text="3"
            android:id="@+id/three_button"
            android:layout_column="2"
            android:layout_row="2"/>

        <Button
            style="?android:attr/buttonStyleSmall"
            android:onClick="onNumberButtonClick"
            android:layout_width="@dimen/box_size"
            android:layout_height="@dimen/box_size"
            android:text="4"
            android:id="@+id/four_button"
            android:layout_row="1"
            android:layout_column="0"/>

        <Button
            style="?android:attr/buttonStyleSmall"
            android:onClick="onNumberButtonClick"
            android:layout_width="@dimen/box_size"
            android:layout_height="@dimen/box_size"
            android:text="5"
            android:id="@+id/five_button"
            android:layout_column="1"
            android:layout_row="1"/>

        <Button
            style="?android:attr/buttonStyleSmall"
            android:onClick="onNumberButtonClick"
            android:layout_width="@dimen/box_size"
            android:layout_height="@dimen/box_size"
            android:text="6"
            android:id="@+id/six_button"
            android:layout_row="1"
            android:layout_column="2"/>

        <Button
            style="?android:attr/buttonStyleSmall"
            android:onClick="onPlusButtonClick"
            android:layout_width="@dimen/box_size"
            android:layout_height="@dimen/box_size"
            android:text="+"
            android:id="@+id/plus_button"
            android:layout_row="3"
            android:layout_column="0"/>

        <Button
            style="?android:attr/buttonStyleSmall"
            android:onClick="onClearButtonClick"
            android:layout_width="@dimen/box_size"
            android:layout_height="@dimen/box_size"
            android:text="C"
            android:id="@+id/delete_button"
            android:layout_row="3"
            android:layout_column="2"/>

    </GridLayout>

    <Button
        android:onClick="onShowCountryClick"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Show country"
        android:id="@+id/show_country_button"
        android:layout_above="@+id/gridLayout"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:width="300dp"
        android:height="50dp"
        />



</LinearLayout>
